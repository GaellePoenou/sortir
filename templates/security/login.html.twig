{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}


{% block body %}
	<div class="container my-5 d-flex align-items-center justify-content-center">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				Vous êtes connecté(e) comme
				{{ app.user.userIdentifier }}
			</div>
		{% endif %}

		<form method="post" action="{{ path('app_login') }}" class="text-center mt-5">

			<div class="form-group row mb-3">
				<label for="inputUsername" class="col-sm-12 col-md-4 col-form-label">Pseudo ou Email</label>
				<div class="col-sm-12 col-md-8">
					<input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control" required autofocus>
				</div>
			</div>

			<div class="form-group row mb-3">
				<label for="inputPassword" class="col-sm-12 col-md-4 col-form-label">Mot de passe</label>
				<div class="col-sm-12 col-md-8">
					<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
				</div>
			</div>

			<div class="form-group row mb-3 d-flex justify-content-between">
				<div class="form-group col-sm-4 mt-2">
					<button class="btn btn-lg btn-primary" type="submit">
						Connexion
					</button>
				</div>

				<div class="form-group col-sm-6 mt-2">
					<div class="form-check">
						<input type="checkbox" class="form-check-input" name="_remember_me" checked id="rememberMe">
						<label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
					</div>
					<a href="#" class="ml-2">Mot de passe oublié ?</a>
				</div>
			</div>

		</form>
	</div>
{% endblock %}
