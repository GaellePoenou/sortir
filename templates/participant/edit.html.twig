{% extends 'base.html.twig' %}

{% block title %}Sortir | Mon profil
{% endblock %}

{% block body %}
	<div class="container">
		<h1 class="display-5 my-3 text-center">Mon profil</h1>
		{% for message in app.flashes('success') %}
			<div class="alert alert-success mt-4">
				{{ message }}
			</div>
		{% endfor %}
		<div class="row">
			<div class="col-md-4">
				{% if form.vars.data.imageName is defined %}
					<img src="{{ asset('/images/participant/upload/' ~ form.vars.data.imageName) }}" alt="Photo de profil" width="200" height="200">
				{% endif %}
			</div>

			<div class="col-md-8 ml-md-0 mx-auto" style="max-width: 600px;">
				{{ form_start(form) }}

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="pseudo">Pseudo:</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="pseudo" name="pseudo" value="{{ participant.pseudo }}">
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="prenom">Prénom:</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="prenom" name="prenom" value="{{ participant.prenom }}">
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="nom">Nom:</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="nom" name="nom" value="{{ participant.nom }}">
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="telephone">Téléphone:</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="telephone" name="telephone" value="{{ participant.telephone }}">
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="email">Email:</label>
					<div class="col-sm-8">
						<input type="text" class="form-control" id="email" name="email" value="{{ participant.email }}">
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="motPasse">Mot de passe:</label>
					<div class="col-sm-8">
						<input type="password" class="form-control" id="motPasse" name="motPasse" required>
					</div>
				</div>
				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="motPasse">Confirmation:</label>
					<div class="col-sm-8">
						<input type="password" class="form-control" id="motPasse" name="motPasse" required>
					</div>
				</div>

				<div class="form-group row mb-3">
					<label class="col-sm-4 col-form-label" for="campus">Campus:</label>
					<div class="col-sm-8">
						<select class="form-control" id="campus" name="campus">
							{% for campusOption in campusNames %}
								<option value="{{ campusOption }}" {% if campusOption == participant.campus %} selected {% endif %}>
									{{ campusOption }}
								</option>
							{% endfor %}
						</select>
					</div>
				</div>

				<div class="form-group row mb-3 d-flex justify-content-between">
					<div class="form-group col-sm-4 mt-2">
						<button class="btn btn-lg btn-primary" type="submit">
							Enregistrer
						</button>
					</div>
					<div class="form-group col-sm-4 mt-2">
						<button class="btn btn-lg btn-primary" type="submit">
							Annuler
						</button>
					</div>

				</div>


			</div>
		</div>
	</div>
{% endblock %}
